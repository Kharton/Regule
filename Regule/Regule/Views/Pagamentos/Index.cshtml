@model Regule.Models.Funcionario

@{
    ViewBag.Title = "Pagamentos";
}
<h2>Pagamentos</h2>
<p>
    @Html.ActionLink("Novo", "Create",null,new {@class="btn btn-default"})
</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label class="control-label">
            Funcionário
        </label>
        @Html.DropDownListFor(model => model.Id, ViewBag.Funcionarios as IEnumerable<SelectListItem>
            ,"Selecione...",new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label class="control-label">
            Referência
        </label>
        
        @Html.EditorFor(model => model.Pagamentos[0].Referencia,new { htmlAttributes = new { @class = "form-control", @type="date"} })
    </div>
    <input type="submit" value="Pesquisar" class="btn btn-default"/>
}
<hr />
@if(Model != null && Model.Pagamentos != null && Model.Pagamentos[0].Valor!=null){
    <table class="table">
        <tr>
            <th>
                Data
            </th>
            <th>
                Referência
            </th>
            <th>
                Valor
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model.Pagamentos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Referencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    <span class="btn-group">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id},new{ @class="btn btn-sm btn-default"})
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new{@class="btn btn-sm btn-default"})
                        @Html.ActionLink("Deletar", "Delete", new { id = item.Id },new{@class="btn btn-sm btn-default"})
                    </span>
                </td>
            </tr>
        }

    </table>
}
