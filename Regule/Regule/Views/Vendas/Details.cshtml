@model Regule.Models.Venda

@{
    ViewBag.Title = "Vendas";
}

<h2>Vendas</h2>

<div>
    <h4>Venda</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pessoa.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pessoa.Nome)
        </dd>  

        <dt>
            @Html.DisplayNameFor(model => model.Desconto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Desconto)
        </dd>       

        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>
    </dl>
    <table class="table table-hover">
        <tr>
            <th>
                Produtos
            </th>

            <th>
                Quantidades
            </th>
        </tr>
        @foreach (var item in Model.VendaProdutos)
        {
        <tr>
            <td>
                @Html.DisplayFor(eaitem => item.Produto.Nome)
            </td>

            <td>
                @Html.DisplayFor(eaitem => item.Quantidade) @Html.DisplayFor(eaitem => item.Unidade.Sigla)
            </td>
        </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Deletar", "Delete", new { id = Model.Id}) |
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Voltar a listagem", "Index")
</p>
