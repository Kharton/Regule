@model IEnumerable<Regule.Models.Pessoa>

@{
    ViewBag.Title = "Clientes";
}
   
<h2>Pessoas Fisicas</h2>
<p>
    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CliComunicars)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CliComunicars)
            </td>
            <td>
                <span class="btn-group">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id},new{ @class="btn btn-sm btn-default"})
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new{@class="btn btn-sm btn-default"})
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id },new{@class="btn btn-sm btn-default"})
                </span>
            </td>
        </tr>
    }

</table>
