@model IEnumerable<Regule.Models.Funcionario>

@{
    ViewBag.Title = "Funcionários";
}
<h2>Funcionários</h2>
<p>
    @Html.ActionLink("Novo", "Create",null,new {@class="btn btn-default"})
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fisica.Pessoa.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarteiraTrb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RG)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fisica.Pessoa.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarteiraTrb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RG)
            </td>
            <td>
                <span class="btn-group btn-group-sm">
                    <a href="Funcionarios/Edit/@item.Id" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a href="Funcionarios/Details/@item.Id" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></a>
                    <a href="Funcionarios/Delete/@item.Id" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span></a>
                </span>
            </td>
        </tr>
    }

</table>
