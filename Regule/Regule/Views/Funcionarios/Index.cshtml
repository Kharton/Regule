@model IEnumerable<Regule.Models.Funcionario>

@{
    ViewBag.Title = "Funcionários";
}
<h2>Funcionários</h2>
<p>
    @Html.ActionLink("Novo", "Create",null,new {@class="btn btn-default"})
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fisica.Pessoa.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarteiraTrb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fisica.CPF)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fisica.Pessoa.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarteiraTrb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fisica.CPF)
            </td>
            <td>
                <span class="btn-group">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id},new{ @class="btn btn-sm btn-default"})
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new{@class="btn btn-sm btn-default"})
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id },new{@class="btn btn-sm btn-default"})
                </span>
            </td>
        </tr>
    }

</table>
