@model IEnumerable<Regule.Models.Compra>

@{
    ViewBag.Title = "Compras";
}
    
@Html.ActionLink("Novo", "Create")

<h2>Compras</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pessoa.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desconto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            Preço
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desconto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <span class="btn-group">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id},new{ @class="btn btn-sm btn-default"})
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new{@class="btn btn-sm btn-default"})
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id },new{@class="btn btn-sm btn-default"})
                </span>
            </td>
        </tr>
    }

</table>
