@model System.Data.Linq.EntitySet<Regule.Models.VendaProduto>

    <div class="panel panel-default">
        <table class="table table-hover">
            <tr>
                <th>
                    Produto
                </th>

                <th>
                    Quantidade
                </th>

                <th>
                    Unidade
                </th>

                <th>
                    Preço
                </th>
            </tr>
            @for(var i = 0; i < Model.Count; i++)
            {           

                <tr>
                    <td>
                        @Html.DropDownListFor(m => Model[i].IdPro, ViewBag.Produtos as IEnumerable<SelectListItem>
                            ,"Produto",new { @class = "form-control" })
                    </td>
                

                    <td>
                        @Html.EditorFor(m => Model[i].Quantidade , new { @class = "form-control" })
                    </td>


                    <td>
                        @Html.DropDownListFor(m => Model[i].IdUnidade, ViewBag.Unidades as IEnumerable<SelectListItem>
                            ,"Unidade",new { @class = "form-control" })
                    </td>


                    <td>
                        @Html.EditorFor(m => Model[i].Preco , new { @class = "form-control" })
                    </td>
                </tr>
            }
            </table>
    </div>
